- provide(:title, 'Вход')
.span7.offset2
  %h2 Войти
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %div
      = f.text_field :username, autofocus: true, placeholder: 'Логин'
    %div
      = f.password_field :password, placeholder: 'Пароль'
    - if devise_mapping.rememberable?
      %div
        = f.check_box :remember_me
        = f.label :remember_me, "Запомнить меня", class: "inline"
    %div= f.submit "Войти", class: "btn btn-large btn-wide"
  = render "devise/shared/links"
